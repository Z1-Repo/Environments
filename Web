    <button onclick="saveTableData()">Save</button>

    <script>
        function saveTableData() {
            const tables = document.querySelectorAll('table');
            const data = [];

            tables.forEach((table, tableIndex) => {
                const rows = table.querySelectorAll('tbody tr');
                rows.forEach((row) => {
                    const cells = row.querySelectorAll('td');
                    const rowData = {
                        table: tableIndex + 1,
                        srNo: cells[0].innerText,
                        environment: cells[1].innerText,
                        developer: cells[2].innerText,
                        qa: cells[3].innerText
                    };
                    data.push(rowData);
                });
            });

            console.log(data); // Replace this with your save logic (e.g., API call)
            alert('Table data saved successfully! Check the console for details.');
        }
    </script>
